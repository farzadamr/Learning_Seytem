@page
@model AdminPanel.EndPoint.Pages.Category.AddChildModel
@{
}

<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>صفحه اصلی</a></li>
                <li>مدیریت دسته بندی</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>افزودن دسته بندی اصلی جدید</h4>
                    </div>
                    <div class="widget-inner">
                        <div class="row">
                            <div class="search-box-container card">
                                <div class="card-body">
                                    <form class="edit-profile m-b30" method="post">
                                        <div class="row mb-3">
                                            <div class="form-group col-4">
                                                <label class="col-form-label">انتخاب دسته بندی پدر</label>
                                                <div>
                                                    <select class="form-control" asp-for="category.ParentTypeId" asp-items="Model.categoryList">
                                                        <option value="0">انتخاب کنید</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group col-4">
                                                <label class="col-form-label">نام دسته بندی فرزند</label>
                                                <div class="d-flex">
                                                    <input class="form-control col-8" type="text" asp-for="category.Type" placeholder="مثلا برنامه نویسی موبایل">
                                                    <button class="btn btn-success" type="submit">ثبت دسته بندی فرزند</button>
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrWhiteSpace(Model.result.Message))
                                            {
                                                <div class="col-4 form-group">
                                                    @if (Model.result.isSuccess)
                                                    {
                                                        <h6 id="text" style="color: rgba(45, 255, 0, 1); margin : 50px 10px;"><i class="fa fa-check-square"></i> @Model.result.Message</h6>
                                                    }
                                                    else
                                                    {

                                                        <h6 id="text" style="color: rgba(245, 0, 0, 0.64); margin : 50px 10px;"><i class="ti-alert"></i> @Model.result.Message</h6>

                                                    }
                                                </div>
                                            }

                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>
<div class="ttr-overlay"></div>