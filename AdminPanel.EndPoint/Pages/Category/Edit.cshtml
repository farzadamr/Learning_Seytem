@page
@model AdminPanel.EndPoint.Pages.Category.EditModel
@{
}
<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>صفحه اصلی</a></li>
                <li>مدیریت دسته بندی</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4 id="edit-entity">ویرایش دسته بندی</h4>
                    </div>
                    <div class="widget-inner">

                        <div class="row">
                            <div class="search-box-container card">
                                <div class="card-body">
                                    <form method="post" class="edit-profile m-b30">
                                        <div class="row mb-3">
                                            <div class="form-group col-4">
                                                <label class="col-form-label">شماره دسته بندی</label>
                                                <div>
                                                    <input class="form-control" asp-for="category.Id" type="number" placeholder="1003">
                                                </div>
                                            </div>
                                            <div class="form-group col-4">
                                                <label class="col-form-label">ویرایش نام دسته بندی</label>
                                                <div>
                                                    <input class="form-control" asp-for="category.Type" type="text" value="مثلا برنامه نویسی">
                                                </div>
                                            </div>
                                            <div class="form-group col-12">
                                                <button class="btn btn-warning add-course" type="submit">ویرایش دسته بندی</button>
                                            </div>
                                    </form>
                                    @if (!string.IsNullOrWhiteSpace(Model.result.Message))
                                    {
                                        <div class="col-4">
                                            @if (Model.result.isSuccess)
                                            {
                                                <h6 id="text" style="color: rgba(45, 255, 0, 1); margin : 50px 10px;"><i class="fa fa-check-square"></i> @Model.result.Message</h6>
                                            }
                                            else
                                            {

                                                <h6 id="text" style="color: rgba(245, 0, 0, 0.64); margin : 50px 10px;"><i class="ti-alert"></i> @Model.result.Message</h6>

                                            }
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>
<div class="ttr-overlay"></div>