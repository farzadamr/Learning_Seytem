@page
@model AdminPanel.EndPoint.Pages.Course.CreateModel
@{
}

<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>صفحه اصلی</a></li>
                <li>مدیریت دوره ها</li>
                <li>دوره</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4>افزودن دوره جدید</h4>
                    </div>
                    <div class="widget-inner">

                        <div class="row">
                            <div class="search-box-container card">
                                <div class="card-body">
                                    <form class="edit-profile m-b30">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="ml-auto">
                                                    <h3>1. مشخصات کلی</h3>
                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <label class="col-form-label">نام دوره</label>
                                                <div>
                                                    <input asp-for="AddCourseModel.Title" class="form-control" type="text" placeholder="دوره react">
                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <label class="col-form-label">دسته بندی دوره</label>
                                                <div>
                                                    <select class="form-control" asp-items="Model.Categories" asp-for="AddCourseModel.CategoryId">
                                                        <option>انتخاب کنید</option>
                                                    </select>

                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <label class="col-form-label">ظرفیت دوره</label>
                                                <div>
                                                    <input class="form-control" type="number" placeholder="50" asp-for="AddCourseModel.Capacity">

                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <label class="col-form-label">انتخاب استاد دوره</label>
                                                <div>
                                                    <select class="form-control" asp-items="Model.Teachers" asp-for="AddCourseModel.TeacherId">
                                                        <option>انتخاب کنید</option>
                                                    </select>

                                                </div>
                                            </div>


                                            <div class="seperator"></div>

                                            <div class="col-12 m-t20">
                                                <div class="ml-auto m-b5">
                                                    <h3>2. تصاویر و ویدیو های دوره</h3>
                                                </div>
                                            </div>

                                            <div class="form-group col-6">
                                                <label class="col-form-label">آپلود عکس و پوستر دوره</label>
                                                <div>
                                                    <input class="form-control" type="file" asp-for="AddCourseModel.TumbnailPath">
                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <label class="col-form-label">دوره شامل ویدیو معرفی است؟</label>
                                                <div>
                                                    <input id="checkbox" class="form-control" type="checkbox">
                                                </div>
                                            </div>
                                            <div class="form-group col-6" id="upload" style="display: none;">
                                                <label class="col-form-label">آپلود ویدیو معرفی دوره</label>
                                                <div>
                                                    <input class="form-control" type="file" asp-for="AddCourseModel.DemoVideoPath">
                                                </div>
                                            </div>
                                            <div class="seperator"></div>

                                            <div class="col-12 m-t20">
                                                <div class="ml-auto m-b5">
                                                    <h3>4. متن درباره دوره</h3>
                                                </div>
                                            </div>

                                            <div class="form-group col-12">
                                                <label class="col-form-label">نوشتن متن درباره دوره با ادیتور</label>
                                                <div>
                                                    <textarea id="Description" class="form-control " rows="5" asp-for="AddCourseModel.Description"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <button id="addnew" class="btn btn-success add-course" type="submit">افزودن دوره جدید</button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>
<div class="ttr-overlay"></div>
@section Scripts{
    <script>
        $('#checkbox').change(function (e) {
            if ($('#upload').css('display') == 'block') {
                $('#upload').css('display', 'none');
            }
            else {
                $('#upload').css('display', 'block');
            }
        });
    </script>
}