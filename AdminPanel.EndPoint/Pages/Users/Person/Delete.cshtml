@page
@model AdminPanel.EndPoint.Pages.Users.Person.DeleteModel
@{
}

<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>صفحه اصلی</a></li>
                <li>مدیریت کاربران</li>
                <li>شخص</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4 id="delete-entity">حذف شخص</h4>
                    </div>
                    <div class="widget-inner">

                        <div class="row">
                            <div class="search-box-container card">
                                <div class="card-header">
                                    <h5>مشخصات شخص مورد نظر</h5>
                                </div>
                                <div class="card-body">
                                    <form class="col-12 d-flex" asp-page-handler="FindPerson">
                                        <label class="col-form-label cname">پست الکترونیک شخص: </label>
                                        <input asp-for="EmailAddress" class="form-control col-4" type="email" placeholder="example@gmail.com">
                                        <div>
                                            <button id="search_person" class="btn btn-success"><i class="ti-search"></i> بازیابی شخص</button>
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(Model.result.Message))
                                        {
                                            if (Model.result.isSuccess)
                                            {
                                                <h6 id="text" style="color: rgba(45, 255, 0, 1); margin : 10px;"><i class="fa fa-check-square"></i>@Model.result.Message</h6>
                                            }
                                            else
                                            {
                                                <h6 id="text" style="color: rgba(245, 0, 0, 0.64); margin : 10px;"><i class="ti-alert"></i>@Model.result.Message</h6>
                                            }
                                        }
                                    </form>
                                </div>
                            </div>
                            @if(Model.Person != null)
                            {
                                <div id="edit-person-box" class="search-box-container card">
                                    <div class="card-body">
                                        <form class="edit-profile m-b30" asp-page-handler="DeletePerson">
                                            <div class="row mb-3">
                                                <div class="col-12">
                                                    <h3>1. اطلاعات کاربر</h3>
                                                    <input type="hidden" value="@Model.Person.Id" asp-for="PersonId" readonly />
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="form-group col-4">
                                                    <label class="col-form-label"> نام</label>
                                                    <div>
                                                        <input class="form-control" type="text" value="@Model.Person.FirstName" disabled>
                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label"> نام خانوادگی</label>
                                                    <div>
                                                        <input class="form-control" type="text" value="@Model.Person.LastName" disabled>
                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label"> شماره تلفن</label>
                                                    <div>
                                                        <input class="form-control" type="number" value="@Model.Person.PhoneNumber" disabled>

                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label"> پست الکترونیک</label>
                                                    <div>
                                                        <input class="form-control" type="email" value="@Model.EmailAddress" disabled>
                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label"> کلمه عبور</label>
                                                    <div>
                                                        <input class="form-control" type="number" value="@Model.Person.Password" disabled>
                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label">تصویر پروفایل شخص</label>
                                                    <div>
                                                        <img class="profile-image" src="@Model.Person.AvatarPath">
                                                    </div>
                                                </div>

                                                <button id="addnew" class="btn btn-danger add-course" type="submit">حذف شخص</button>
                                        </form>
                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>
<div class="ttr-overlay"></div>