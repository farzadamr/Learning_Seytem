@page
@model AdminPanel.EndPoint.Pages.Users.Person.editModel
@{
}

<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>صفحه اصلی</a></li>
                <li>مدیریت کاربران</li>
                <li>شخص</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="wc-title">
                        <h4 id="edit-entity">ویرایش شخص</h4>
                    </div>
                    <div class="widget-inner">

                        <div class="row">
                            <div class="search-box-container card">
                                <div class="card-header">
                                    <h5>مشخصات شخص مورد نظر</h5>
                                </div>
                                <div class="card-body">
                                    <form asp-page-handler="FindPerson" class="col-12 d-flex">
                                        <label class="col-form-label cname">پست الکترونیک شخص: </label>
                                        <input asp-for="EmailAddress" class="form-control col-4" type="email" placeholder="example@gmail.com">
                                        <div>
                                            <button id="search_person" class="btn btn-success"><i class="ti-search"></i> بازیابی شخص</button>
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(Model.result.Message))
                                        {
                                            if (Model.result.isSuccess)
                                            {
                                                <h6 id="text" style="color: rgba(45, 255, 0, 1); margin : 10px;"><i class="fa fa-check-square"></i> @Model.result.Message</h6>
                                            }
                                            else
                                            {

                                                <h6 id="text" style="color: rgba(245, 0, 0, 0.64); margin : 10px;"><i class="ti-alert"></i> @Model.result.Message</h6>

                                            }
                                        }

                                    </form>
                                </div>
                            </div>
                            @if (Model.Person != null)
                            {
                                <div id="edit-person-box" class="search-box-container card">
                                    <div class="card-body">
                                        <form asp-page-handler="EditPerson" enctype="multipart/form-data" asp-antiforgery=true class="edit-profile m-b30">
                                            <div class="row mb-3">
                                                <div class="col-12">
                                                    <h3>1. ویرایش اطلاعات کاربر</h3>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="form-group col-4">
                                                    <label class="col-form-label">ویرایش نام</label>
                                                    <div>
                                                        <input asp-for="PersonModel.FirstName" class="form-control" type="text" value="@Model.Person.FirstName">
                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label">ویرایش نام خانوادگی</label>
                                                    <div>
                                                        <input class="form-control" type="text" asp-for="PersonModel.LastName" value="@Model.Person.LastName">
                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label">ویرایش شماره تلفن</label>
                                                    <div>
                                                        <input class="form-control" type="number" asp-for="PersonModel.PhoneNumber" value="@Model.Person.PhoneNumber">

                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label">ویرایش پست الکترونیک</label>
                                                    <div>
                                                        <input class="form-control" type="email" asp-for="PersonModel.Email" value="@Model.Person.Email">
                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label">ویرایش کلمه عبور</label>
                                                    <div>
                                                        <input class="form-control" type="password" asp-for="PersonModel.Password" value="@Model.Person.Password">
                                                    </div>
                                                </div>
                                                <div class="form-group col-6">
                                                    <label class="col-form-label">تصویر پروفایل فعلی</label>
                                                    <div>
                                                        <img class="profile-image" src="@Model.Person.AvatarPath">
                                                    </div>
                                                </div>
                                                <div class="form-group col-4">
                                                    <label class="col-form-label edit-profile">ویرایش پروفایل شخص</label>
                                                    <div>
                                                        <input class="form-control" asp-for="Image" type="file">
                                                    </div>
                                                </div>
                                                <div class="form-group col-12">
                                                    <button id="addnew" class="btn btn-success add-course" type="submit">ویرایش شخص</button>
                                                </div>

                                        </form>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>
<div class="ttr-overlay"></div>
